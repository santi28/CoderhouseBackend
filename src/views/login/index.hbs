<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Inicio de sesión</title>

    {{! Google Fonts }}
    <link rel='preconnect' href='https://fonts.googleapis.com' />
    <link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
    <link
      href='https://fonts.googleapis.com/css2?family=Outfit:wght@400;500&display=swap'
      rel='stylesheet'
    />

    {{! Tailwind CSS }}
    <script src='https://cdn.tailwindcss.com'></script>

    <style>
      body { font-family: 'Outfit', Helvetica, sans-serif; }
    </style>
  </head>
  <body class='flex flex-col items-center pt-10'>
    <main class='flex justify-center w-full'>
      <form
        class='w-full max-w-md border border-zinc-200 bg-zinc-100 p-4 rounded-lg'
      >
        <h1 class='mb-5 text-2xl font-medium'>Iniciar sesión con email</h1>
        <div class='bg-zinc-50 p-1 rounded-lg border border-zinc-300 flex'>
          <a
            class='w-full p-1 rounded-md text-center bg-blue-200 text-blue-800'
            href='login'
          >Iniciar sesión</a>
          <a
            class='w-full p-1 rounded-md text-center'
            href='register'
          >Registrarse</a>
        </div>

        <div class='flex flex-col mt-4'>
          <label class='text-sm italic text-zinc-500' for='email'>Correo
            electrónico</label>
          <input
            class='border border-zinc-300 rounded-md p-1'
            type='email'
            name='email'
            id='email'
          />
        </div>

        <div class='flex flex-col mt-4'>
          <label
            class='text-sm italic text-zinc-500'
            for='password'
          >Contraseña</label>
          <input
            class='border border-zinc-300 rounded-md p-1'
            type='password'
            name='password'
            id='password'
          />
        </div>

        <button
          type='submit'
          class='mt-4 w-full text-white bg-blue-600 font-medium rounded-lg p-2 text-center'
        >Iniciar sesión</button>
      </form>
    </main>
    <script src='/login.js'></script>
  </body>
</html>