<form
  class='self-center w-full max-w-md p-4 mt-10 border rounded-lg border-zinc-200 bg-zinc-100'>
  <h1 class='mb-5 text-2xl font-medium'>Iniciar sesión con email</h1>
  <div class='flex p-1 border rounded-lg bg-zinc-50 border-zinc-300'>
    <a
      class='w-full p-1 text-center text-blue-800 bg-blue-200 rounded-md'
      href='login'
    >Iniciar sesión</a>
    <a
      class='w-full p-1 text-center rounded-md'
      href='register'
    >Registrarse</a>
  </div>

  <div class='flex flex-col mt-4'>
    <label class='text-sm italic text-zinc-500' for='email'>Correo
      electrónico</label>
    <input
      class='p-1 border rounded-md border-zinc-300'
      type='email'
      name='email'
      id='email'
    />
  </div>

  <div class='flex flex-col mt-4'>
    <label
      class='text-sm italic text-zinc-500'
      for='password'
    >Contraseña</label>
    <input
      class='p-1 border rounded-md border-zinc-300'
      type='password'
      name='password'
      id='password'
    />
  </div>

  <button
    type='submit'
    class='w-full p-2 mt-4 font-medium text-center text-white bg-blue-600 rounded-lg'
  >Iniciar sesión</button>
</form>
<script src="javascript/login.js"></script>